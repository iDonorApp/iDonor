<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="4dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/iv_detail_goldar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="14dp"
            android:src="@drawable/icon_goldar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_detail_goldar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="34dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_detail_goldar"
            app:layout_constraintEnd_toEndOf="@id/iv_detail_goldar"
            app:layout_constraintStart_toStartOf="@id/iv_detail_goldar"
            app:layout_constraintTop_toTopOf="@id/iv_detail_goldar"
            tools:text="O" />

        <TextView
            android:id="@+id/tv_item_akun_nama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toTopOf="@id/iv_detail_goldar"
            app:layout_constraintStart_toEndOf="@id/iv_detail_goldar"
            app:layout_constraintBottom_toBottomOf="@id/iv_detail_goldar"
            tools:text="@string/detail_nama" />

        <View
            android:id="@+id/guide_line"
            android:layout_width="375dp"
            android:layout_height="1dp"
            android:layout_marginTop="17dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_detail_goldar" />

        <TextView
            android:id="@+id/tv_item_akun_no_kamar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="@string/no_kamar"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/iv_detail_goldar"
            app:layout_constraintTop_toBottomOf="@id/guide_line" />

        <TextView
            android:id="@+id/tv_item_akun_no_kamar_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_item_akun_no_kamar"
            app:layout_constraintTop_toBottomOf="@id/guide_line"
            tools:text="S-01" />

        <TextView
            android:id="@+id/tv_item_akun_goldar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="@string/detail_goldar"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_item_akun_no_kamar"
            app:layout_constraintTop_toBottomOf="@id/tv_item_akun_no_kamar" />

        <TextView
            android:id="@+id/tv_item_akun_goldar_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_item_akun_goldar"
            app:layout_constraintTop_toBottomOf="@id/tv_item_akun_no_kamar_value"
            tools:text="O" />

        <TextView
            android:id="@+id/tv_item_akun_umur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="@string/detail_umur"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_item_akun_goldar"
            app:layout_constraintTop_toBottomOf="@id/tv_item_akun_goldar" />

        <TextView
            android:id="@+id/tv_item_akun_umur_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_item_akun_umur"
            app:layout_constraintTop_toBottomOf="@id/tv_item_akun_goldar_value"
            tools:text="25 Tahun" />

        <TextView
            android:id="@+id/tv_item_akun_waktu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="@string/detail_waktu"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_item_akun_umur"
            app:layout_constraintTop_toBottomOf="@id/tv_item_akun_umur" />

        <TextView
            android:id="@+id/tv_item_akun_waktu_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_item_akun_waktu"
            app:layout_constraintTop_toBottomOf="@id/tv_item_akun_umur_value"
            tools:text="13:00-15:30" />

        <Button
            android:id="@+id/btn_whatsapp"
            android:layout_width="115dp"
            android:layout_height="45dp"
            android:drawableRight="@drawable/icon_whatsapp"
            android:text="@string/hubungi"
            android:textSize="9sp"
            app:cornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>